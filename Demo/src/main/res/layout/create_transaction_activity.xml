<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminate="true"/>

    <TextView
        android:id="@+id/transaction_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/transaction_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:gravity="center"
        android:visibility="gone"/>
    <Button
        style="?android:attr/buttonStyle"
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/void_title"
        android:onClick="deleteRequest"
        android:visibility="gone"
        android:textSize="12sp" />
    <Button
        style="?android:attr/buttonStyle"
        android:id="@+id/btnAdjust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/adjust_title"
        android:onClick="adjustRequest"
        android:visibility="gone"
        android:textSize="12sp" />
    <Button
        style="?android:attr/buttonStyle"
        android:id="@+id/btnCapture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/capture_title"
        android:onClick="captureRequest"
        android:visibility="gone"
        android:textSize="12sp" />
    <Button
        style="?android:attr/buttonStyle"
        android:id="@+id/btnUncapture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/uncapture_title"
        android:onClick="uncaptureRequest"
        android:visibility="gone"
        android:textSize="12sp" />
</LinearLayout>